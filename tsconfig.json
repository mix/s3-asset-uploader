{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es6"
  },
  "include": [
    "./index.js",
    "./lib/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
